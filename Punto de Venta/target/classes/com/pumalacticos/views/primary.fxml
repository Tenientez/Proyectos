<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pumalacticos.controller.PrimaryController">
   
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
         </padding>
         <children>
            <Label text="Punto de Venta ODIN" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <HBox spacing="10.0" alignment="CENTER_LEFT">
               <children>
                  <Label text="Código de Barras:" />
                  <TextField fx:id="txtCodigo" onAction="#agregarProductoPorEnter" promptText="Escanea o escribe aquí..." HBox.hgrow="ALWAYS" />
                  <Button text="Agregar" onAction="#agregarProductoPorBoton" />
               </children>
            </HBox>
         </children>
      </VBox>
   </top>

   <center>
      <TableView fx:id="tablaVentas" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colProducto" prefWidth="300.0" text="Producto" />
          <TableColumn fx:id="colCantidad" prefWidth="100.0" text="Cantidad" />
          <TableColumn fx:id="colPrecioU" prefWidth="100.0" text="Precio U." />
          <TableColumn fx:id="colSubtotal" prefWidth="100.0" text="Subtotal" />
        </columns>
         <BorderPane.margin>
            <Insets left="15.0" right="15.0" />
         </BorderPane.margin>
      </TableView>
   </center>

   <right>
      <VBox prefWidth="250.0" spacing="15.0" style="-fx-background-color: #ecf0f1;" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <Label text="Resumen de Venta">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            
            <HBox spacing="10.0">
               <children>
                  <Label text="TOTAL:" textFill="#e74c3c">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblTotal" text="\$0.00">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <Label text="Método de Pago:" />
            
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#pagarEfectivo" style="-fx-background-color: #2ecc71; -fx-text-fill: white;" text="Pagar con Efectivo">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#pagarTarjeta" style="-fx-background-color: #3498db; -fx-text-fill: white;" text="Pagar con Tarjeta">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>

            <Label text="Opciones:" />
            
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#eliminarProductoSeleccionado" style="-fx-background-color: #e74c3c; -fx-text-fill: white;" text="Eliminar Seleccionado" />
            
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#cancelarVenta" style="-fx-background-color: #95a5a6; -fx-text-fill: white;" text="Cancelar Venta" />
            
            <VBox VBox.vgrow="ALWAYS" />
            
            <Button text="Gestionar Productos" onAction="#irAProductos" maxWidth="1.7976931348623157E308"/>
            
            <Button text="Ir a Reportes" onAction="#irAReportes" maxWidth="1.7976931348623157E308"/>
         </children>
      </VBox>
   </right>
</BorderPane>